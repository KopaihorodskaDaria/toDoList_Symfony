{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <h1>Login</h1>

    {% if error %}
        <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <p>You are logged in as {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}">Logout</a></p>
        <p><a href="{{ path('task_index') }}">Go to your tasks</a></p>
    {% else %}
        <form method="post" action="{{ path('app_login') }}">
            <label for="email">Email</label>
            <input type="email" value="{{ last_username }}" name="_email" id="username" required autofocus>

            <label for="password">Password</label>
            <input type="password" name="_password" id="password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit">Sign in</button>
        </form>


        <p>Don't have an account? <a href="{{ path('app_register') }}">Register here</a></p>
    {% endif %}
{% endblock %}
